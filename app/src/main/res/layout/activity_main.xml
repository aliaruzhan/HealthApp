<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/image_margin_start"
        android:layout_marginLeft="@dimen/image_margin_left"
        android:layout_marginTop="@dimen/image_margin_top"
        android:layout_marginEnd="@dimen/image_margin_end"
        android:layout_marginRight="@dimen/image_margin_right"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="@dimen/button_layout_width"
        android:layout_height="@dimen/button_layout_height"
        android:layout_marginStart="@dimen/button_margin_start"
        android:layout_marginLeft="@dimen/button_margin_left"
        android:layout_marginTop="@dimen/button_margin_top"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="@string/start"
        android:textColor="@android:color/holo_green_light"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:backgroundTint="@android:color/holo_green_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>